<Page x:Class="WorkReportWPF.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkReportWPF"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="668" d:DesignWidth="1300"
      MinHeight="668" MinWidth="1300"
      Title="Settings">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Settings for application" Grid.ColumnSpan="3" Foreground="White" Background="Transparent" FontSize="26" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Team Members (email information)" Margin="0,0,0,556" Grid.Row="1" Foreground="White" Background="Transparent" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Save" Margin="323,541,10,10" Grid.Row="1"/>

        <Label Content="List of users" Margin="433,0,433,556" Grid.Row="1" Foreground="White" Background="Transparent" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.ColumnSpan="3"/>
        <Label Content="List of projekts" Margin="0,0,0,556" Grid.Row="1" Foreground="White" Background="Transparent" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Column="2"/>
        <Button
    Background="#aeea00"
    Style="{StaticResource MaterialDesignRaisedButton}"
    materialDesign:ButtonAssist.CornerRadius="10"
    materialDesign:ButtonProgressAssist.Value="-1"
    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
    materialDesign:ButtonProgressAssist.IsIndeterminate="True"
    Foreground="Black"
    Content="Refresh"
    Margin="323,433,10,118"
    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Grid.Column="2" Grid.Row="1" />
        <TextBox 
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Name="Refresh_0" 
            Text="" 
            Margin="0,481,0,0" 
            Foreground="WHITE" 
            Background="#FF292626"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Height="50" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center" 
            Width="413" 
            FontSize="10" 
            Cursor="IBeam"
            materialDesign:HintAssist.Hint="Name of projects" Grid.Column="2" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Delete" Margin="324,541,10,10" Grid.Row="1" Grid.Column="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Add" Margin="10,541,324,10" Grid.Row="1" Grid.Column="1">
        </Button>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Delete" Margin="323,541,10,10" Grid.Row="1" Grid.Column="2"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Edit" Margin="216,541,117,10" Grid.Row="1" Grid.Column="2"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Add" Margin="10,541,323,10" Grid.Row="1" Grid.Column="2"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Edit" Margin="117,541,217,10" Grid.Row="1" Grid.Column="1"/>
        <Button
    Background="#aeea00"
    Style="{StaticResource MaterialDesignRaisedButton}"
    materialDesign:ButtonAssist.CornerRadius="10"
    materialDesign:ButtonProgressAssist.Value="-1"
    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
    materialDesign:ButtonProgressAssist.IsIndeterminate="True"
    Content="Refresh"
    Foreground="Black"
    Margin="10,541,323,10"         
    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Grid.Row="1" />
        <TextBox 
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Name="Name_of_projects" 
            Text="" 
            Margin="0,481,0,0" 
            Foreground="WHITE" 
            Background="#FF292626"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Height="50" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center" 
            Width="413" 
            FontSize="10" 
            Cursor="IBeam"
            materialDesign:HintAssist.Hint="Name of projects" Grid.Column="2" Grid.Row="1"/>

        <TextBox             
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Name="Mail_address" 
            Text="" 
            Margin="15,481,0,0" 
            Foreground="WHITE" 
            Background="#FF292626"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Height="50" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Width="181" 
            FontSize="10" 
            Cursor="IBeam"
            materialDesign:HintAssist.Hint="Mail address" Grid.Column="1" Grid.Row="1"/>
        <TextBox 
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Name="Subject_Text" 
            Text="" 
            Margin="15,424,0,0" 
            Foreground="WHITE" 
            Background="#FF292626"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Height="50" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Width="181" 
            FontSize="10" 
            Cursor="IBeam"
            materialDesign:HintAssist.Hint="Subject" Grid.Column="1" Grid.Row="1"/>
        <TextBox
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Name="Log_in" 
            Text="" 
            Margin="237,423,0,0"
            Foreground="WHITE" 
            Background="#FF292626"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Height="50" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Width="181" 
            FontSize="10" 
            Cursor="IBeam"
            materialDesign:HintAssist.Hint="Log in" Grid.Column="1" Grid.Row="1"/>
        <ComboBox   Grid.Column="1" Margin="237,481,16,52" Grid.Row="1"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                    materialDesign:HintAssist.Hint="Rights"

                    materialDesign:TextFieldAssist.HasClearButton="True">
            <ComboBox.SelectedItem>
                <Binding
                Path="SelectedValidationOutlined"
                Mode="TwoWay"
                UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>

                    </Binding.ValidationRules>
                </Binding>
            </ComboBox.SelectedItem>
        </ComboBox>
        <TextBox 
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            x:Name="New_member" 
            Text="" 
            Margin="0,322,0,0" 
            Foreground="WHITE" 
            Background="#FF292626"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Height="50" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center" 
            Width="413" 
            FontSize="10" 
            Cursor="IBeam"
            materialDesign:HintAssist.Hint="New member" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Add" Margin="10,377,323,174" Grid.Row="1"/>
        <Button
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            Width="100"
            Content="Delete" Margin="323,377,10,174" Grid.Row="1"/>
        <Button
            Background="#aeea00"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="10"
            materialDesign:ButtonProgressAssist.Value="-1"
            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
            Content="Refresh"
            Foreground="Black"
            Margin="323,284,10,267"         
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Grid.Row="1" />




    </Grid>
</Page>
