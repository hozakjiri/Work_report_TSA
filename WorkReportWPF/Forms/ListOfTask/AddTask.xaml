<Page x:Class="WorkReportWPF.Forms.ListOfTask.AddTask"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkReportWPF.Forms.ListOfTask"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="588" d:DesignWidth="1300"
      Title="AddTask" Loaded="Page_Loaded">

    <Grid Background="#FF3399FF">

        <TextBox x:Name ="txtTopic"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
            TextWrapping="Wrap" 
            Text="" 
            Margin="20,33,615,497" 
            RenderTransformOrigin="0.519,0.505" 
            AcceptsReturn="True" 
            Foreground="#FFFFF407" 
            Background="#FF3A85D1" 
            Cursor="IBeam" 
            FontSize="20"
            materialDesign:HintAssist.Hint="Topic"
            materialDesign:HintAssist.Background="#FF3A85D1"
            materialDesign:HintAssist.Foreground="#aeea00" SelectionTextBrush="{x:Null}" SelectionBrush="{x:Null}" CaretBrush="{x:Null}" BorderBrush="#BC9E7979" FontWeight="Bold"
                 />
        <TextBox x:Name ="txtDescription"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
            TextWrapping="Wrap" 
            Text="" 
            Margin="20,118,293,138" 
            RenderTransformOrigin="0.519,0.505" 
            AcceptsReturn="True" 
            Foreground="#aeea00" 
            Background="#FF3A85D1" 
            Cursor="IBeam" 
            FontSize="20"
            materialDesign:HintAssist.Hint="Description"
            materialDesign:HintAssist.Background="#FF3A85D1"
            materialDesign:HintAssist.Foreground="#aeea00" FontWeight="Bold"
                 />
        <ComboBox x:Name="cmbPriority" Margin="1042,156,50,382"
            Style="{StaticResource MaterialDesignOutlinedComboBox}"
            materialDesign:HintAssist.Hint="Priority"
            Foreground="#aeea00"
            Background="#FF3A85D1"

            materialDesign:TextFieldAssist.HasClearButton="True"
            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
            materialDesign:ColorZoneAssist.Mode="Standard"
            materialDesign:HintAssist.HelperText="Select one priority" SelectedItem="{Binding SelectedValidationOutlined, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" SelectedIndex="0">
        </ComboBox>
        <ComboBox x:Name="cmbUser" Margin="1042,294,50,244"
            Style="{StaticResource MaterialDesignOutlinedComboBox}"
            materialDesign:HintAssist.Hint="User"
            Foreground="#aeea00"
            Background="#FF3A85D1"

            materialDesign:TextFieldAssist.HasClearButton="True"
            materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
            materialDesign:ColorZoneAssist.Mode="SecondaryLight"
            materialDesign:HintAssist.HelperText="Select target user" SelectedItem="{Binding SelectedValidationOutlined, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" SelectedIndex="8"/>
        <DatePicker x:Name="datePicker" 
            materialDesign:HintAssist.Hint="Term" 
            HorizontalAlignment="Left" Margin="780,28,0,0" 
            Width="470" 
            Background="#FF3A85D1" 
            Foreground="Black"
            FontSize="20" 
            FirstDayOfWeek="Monday" 
            SelectedDateFormat="Long" 
            Text="select date"
            Cursor="ArrowCD" 
            Height="68" VerticalAlignment="Top" BorderBrush="#89FFFFFF"  >
            <DatePicker.CalendarStyle>
                <Style TargetType="{x:Type Calendar}">
                    <Style.Resources>
                        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#FF3A85D1" />
                        <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#FF3A85D1"/>
                    </Style.Resources>
                    <Style.BasedOn>
                        <StaticResource ResourceKey="MaterialDesignCalendarPortrait"/>
                    </Style.BasedOn>
                </Style>
            </DatePicker.CalendarStyle>


        </DatePicker>
        <Button x:Name="Delete_Task" BorderBrush="{x:Null}"  materialDesign:ButtonAssist.CornerRadius="10" Margin="0,0,30,47" Height="60" Background="#aeea00" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="152" Click="Delete_Task_Click" >
            <StackPanel Width="150" VerticalAlignment="Center" HorizontalAlignment="Left" Height="50" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="DeleteEmpty" Foreground="Black" Height="50" Width="50" RenderTransformOrigin="0.5,0.5" ToolTip="Send Email" VerticalAlignment="Center"/>
                <TextBlock x:Name="Send_Email"  Text="Delete" Width="88" VerticalAlignment="Center"  Margin="10,0,0,0" FontSize="20" Foreground="Black"/>
            </StackPanel>
        </Button>
        <Button x:Name="Save_Task" BorderBrush="{x:Null}"  materialDesign:ButtonAssist.CornerRadius="10" Margin="0,0,206,47" Height="60" Background="#aeea00" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="152" Click="Save_Task_Click">
            <StackPanel Width="150" VerticalAlignment="Center" HorizontalAlignment="Left" Height="50" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="ContentSave" Foreground="Black" Height="50" Width="50" RenderTransformOrigin="0.5,0.5" ToolTip="Send Email" VerticalAlignment="Center"/>
                <TextBlock x:Name="Send_Email1"  Text="Save" Width="88" VerticalAlignment="Center"  Margin="10,0,0,0" FontSize="20" Foreground="Black"/>
            </StackPanel>
        </Button>

    </Grid>
</Page>
